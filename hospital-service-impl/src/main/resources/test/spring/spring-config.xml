<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="  
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context.xsd
     http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans.xsd" default-lazy-init="true">

    <context:annotation-config />
	<context:component-scan base-package="com.lanniuh" />

	<!--引入dubbo配置文件-->
	<context:property-placeholder location="classpath*:test/dubbo.properties" ignore-unresolvable="true"/>
	<!--引入mybatis配置文件-->
	<context:property-placeholder location="classpath*:test/mybatis.properties" ignore-unresolvable="true"/>
	<!--引入log4j配置文件-->
	<context:property-placeholder location="classpath*:test/log4j.properties" ignore-unresolvable="true"/>
</beans>